{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es2017",
    "jsx": "react",
    "allowJs": true,
    "declaration": true,
    "declarationDir": "build",
    "strict": false,
    "noUnusedLocals": true,
    "checkJs": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "noEmitOnError": false,
    "outDir": "build",
    "paths": {
      "@odf/shared/*": ["./src/*"],
      "packages/shared/*": ["./src/*"]
    }
  },
  "exclude": ["node_modules/**/*", "**/*.spec.ts", "**/*.spec.tsx"],
  "include": ["src"]
}
