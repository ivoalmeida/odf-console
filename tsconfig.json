{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es2017",
    "jsx": "react",
    "allowJs": true,
    "checkJs": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "noEmitOnError": false,
    "outDir": "./dist",
    "paths": {
      "@odf/shared/*": ["./packages/shared/src/*"],
      "packages/shared/*": ["./packages/shared/src/*"]
    }
  },
  "exclude": ["**/*/build", "**/*.spec.ts", "**/*.spec.tsx"],
  "include": ["packages"]
}
